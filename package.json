{
  "name": "vitebook-workspace",
  "version": "0.8.3",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node .scripts/run-build.js",
    "build:all": "pnpm build --filter ./packages",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "docs:build": "pnpm vitebook:build --filter @vitebook/docs",
    "docs:dev": "pnpm vitebook:dev --filter @vitebook/docs",
    "docs:preview": "pnpm vitebook:preview --filter @vitebook/docs",
    "example": "node .scripts/run-example.js",
    "format": "run-s format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "npm run lint:prettier -- --write",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx . --ignore-path .gitignore",
    "lint:prettier": "prettier . --check --ignore-path .gitignore --loglevel warn",
    "preinstall": "node .scripts/preinstall.js",
    "postinstall": "npm i --prefix docs",
    "prepare": "husky install",
    "release": "pnpm test:node-esm && node .scripts/release.js",
    "sandbox": "node .scripts/run-sandbox.js",
    "test:node-esm": "node .scripts/test-node-esm.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,vue,md,json}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chokidar": "^3.5.2",
    "conventional-changelog-cli": "^2.1.1",
    "enquirer": "^2.3.6",
    "esbuild": "^0.12.29",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "kleur": "^4.1.4",
    "lint-staged": "^11.2.6",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "sort-package-json": "^1.52.0",
    "typescript": "^4.4.4",
    "upath": "^2.0.1"
  },
  "engines": {
    "node": ">=16.10.0",
    "pnpm": ">=6.16.1"
  },
  "packageManager": "pnpm",
  "volta": {
    "node": "16.10.0"
  }
}
